<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/button_style"
        android:text=" TTTT " />

    <Button
        android:id="@+id/btn_start2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:text=" Camera "/>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_below="@id/btn_start2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:singleLine="false" />

    <TextView
        android:id="@+id/translated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_result"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/before_translated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/translated"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/translated"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_style"
        android:text=" Add Word " />

    <Button
        android:id="@+id/btn_myword"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:text=" My WordBook " />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_myword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:text="TEST" />

</RelativeLayout >